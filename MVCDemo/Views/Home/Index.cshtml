            $('#getlistbtn').click(function () {
                $.ajax({
                    type: "GET",
                    url: "http://localhost:8007/v1/TEST",
                    dataType: 'json',
                    headers: { "Authorization": token },
                    success: function (result) {
                        // 把返回的文本填充到d-text中
                        if (result.code == "0") {
                            $('#data').html(JSON.stringify(result.data));
                            $('#msg').html(result.msg);
