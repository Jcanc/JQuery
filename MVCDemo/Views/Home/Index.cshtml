                    dataType: "json",
                    headers: { "Authorization": token },
                    success: function (result) {
                        if (result.code == "0") {
                            $('#msg').html("msg:" + result.msg);
                        } else {
                            $('#msg').html("msg:" + result.msg);
                        }
                    },
                    error: function (err) {
                        $('#msg').html("请求失败。" + err);
                    }
                });
            });
        });
    </script>
</body>
</html>